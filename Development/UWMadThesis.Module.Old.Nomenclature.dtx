        {}%
        {\ifUWMad@MakeNomenclatureStarred%
            \csname\TheCurrentSectionCommand\endcsname*%
                {\TheCurrentSectionName}%
            \UWMad@FrontMatterRegister%
                [\TheCurrentSectionCommand]%
                {\TheCurrentSectionName}
         \else%
            \csname\TheCurrentSectionCommand\endcsname
                {\TheCurrentSectionName}%
         \fi}%
}
