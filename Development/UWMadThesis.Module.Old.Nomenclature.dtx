\newcommand*{\UWMad@UpdateWidest}[1]{%
    \settowidth{\UWMad@WidestTest}{#1}%
    \ifdim\UWMad@Widest<\UWMad@WidestTest%
        \setlength{\UWMad@Widest}{\UWMad@WidestTest}%
    \fi%
}
%
\newcommand*{\ResetColumnWidth}{%
    \global\setlength{\UWMad@Widest}{0pt}%
}
